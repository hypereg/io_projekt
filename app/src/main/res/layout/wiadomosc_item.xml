<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/mail_date_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#999999"
        android:visibility="gone" />

    <TextView
        android:id="@+id/mail_date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        style="@style/ItemOpis"
        android:text="2024-01-01"
        android:textStyle="bold"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/kafelek_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/smallkafelek"
        android:padding="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="top">

            <LinearLayout
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/bell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bell" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ocena_przedmiot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Matematyka"
                    style="@style/ItemTitle"/>

                <TextView
                    android:id="@+id/ocena_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    style="@style/ItemOpis"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/arrow"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/arrow_right"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/ocena_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tutaj wiadomość"
            android:visibility="gone"
            android:padding="16dp"
            android:textColor="#000000"/>
    </LinearLayout>
</LinearLayout>